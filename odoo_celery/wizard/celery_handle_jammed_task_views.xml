<odoo>
    <data>
        <record id="view_celery_handle_jammed_task_form" model="ir.ui.view">
            <field name="name">Celery Handle Jammed Task</field>
            <field name="model">celery.handle.jammed.task</field>
            <field name="arch" type="xml">
                <form string="Change Task to Jammed">
                    <group string="The state of selected tasks shall changed to Jammed.">
                        <field name="task_ids" nolabel="1"/>
                    </group>
                    <footer>
                        <button name="action_handle_jammed_tasks" string="Apply" type="object" class="btn btn-primary"/>
                        <button string="Close" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>
